{{!< layout}}
{{#if instance}}
  {{#if status}}
  {{!--
    possible status colors:
      "green"
      "orange"
      "red"
      "gray"
  --}}
  <div>Deployed <img src="https://s3-us-west-1.amazonaws.com/runnable-design/status-green.svg" title="{{{status}}}" width="9" height="9" class="icon-status"><a href="#">repoName/SAN-7334</a>. <a href=http://{{{url}}} target="_blank">View on Runnable</a>.</div>
  {{else}}
